<Page x:Class="AVTOTEST.Pages.TicketsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AVTOTEST.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="500"
      Title="TicketsPage" Background="Gray">

    <Grid>
        <Label Name="Title" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" FontSize="30" Content="Tickets" ></Label>
        <ScrollViewer Margin="0 60 0 60">
            <StackPanel Name="TicketButtonsPanel">
            </StackPanel>
        </ScrollViewer>
        <Button Click="MenuButtonClick"  Width="80" Height="40" Content="Menu" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
    </Grid>
</Page>
